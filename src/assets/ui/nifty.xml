<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">	
<useStyles filename="nifty-default-styles.xml" />
	<useControls filename="nifty-default-controls.xml" />

	<screen id="start" controller="game.StartState">
		<layer id="foreground" backgroundColor="#0000" childLayout="center">
			<panel id="panel_mid" height="25%" width="20%" align="center"
				childLayout="center" style="nifty-panel">
				<control name="button" label="Start" id="StartButton" align="center"
					valign="center" visibleToMouse="true">
					<interact onClick="start()" />
				</control>
			</panel>
		</layer>
	</screen>

	<screen id="choose" controller="game.ChooseState">
		<layer backgroundColor="#0000" childLayout="horizontal">
			<panel id="panel_2" height="10%" width="85%" align="left" childLayout="center" style="nifty-panel">
				<control id="dropdown" name="dropDown" />
			</panel>
			<panel id="panel_1" height="10%" width="15%" align="right" childLayout="center" style="nifty-panel">
				<control name="button" label="Start" id="StartButton" align="center"
					valign="center" visibleToMouse="true">
					<interact onClick="choose()" />
				</control>
			</panel>
		</layer>
	</screen>

	<screen id="noop" controller="game.MenuState">
		<!-- This is THE default screen when the game is running-->
		<layer backgroundColor="#3330" childLayout="horizontal">
			<panel id="panel_1" height="7%" width="10%" align="left" childLayout="center" style="nifty-panel">
				<text text="TAB for info" font="Interface/Fonts/Default.fnt" width="100%" height="100%" wrap="true" />
			</panel>
		</layer>
	</screen>

	<screen id="paused" controller="game.MenuState">
		<layer id="foreground" backgroundColor="#0000" childLayout="center">
			<panel id="panel_mid" height="25%" width="20%" align="center"
				childLayout="center" backgroundColor="#fff8">
				<control name="button" label="Un pause" id="StartButton" align="center"
					valign="center" visibleToMouse="true">
					<interact onClick="togglePause()" />
				</control>
			</panel>
		</layer>
	</screen>
	
	<screen id="tabmenu" controller="game.MenuState">
		<layer backgroundColor="#3330" childLayout="vertical">
			<panel id="panel_mid" height="25%" width="15%" align="left"
				childLayout="center" backgroundColor="#bbbf">
				<text text="Controls: arrows move, q is jump, e,z both camera, tab is this, esc is pause, enter is reset, f is flip" 
        			font="Interface/Fonts/Default.fnt" width="100%" height="100%" wrap="true" />
			</panel>
		</layer>
	</screen>
	
	<screen id="console_s" controller="game.MenuState">
		<layer backgroundColor="#3330" childLayout="vertical">
			<panel id="panel_c" height="5%" width="10%" childLayout="center">
				<control id="console" name="nifty-console" lines="25" align="center" valign="center" />
			</panel>
		</layer>
	</screen>
</nifty>


